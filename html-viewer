<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HTML Formatter & Explorer</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .collapsible-content {
            border-left: 2px solid #e5e7eb;
            margin-left: 1rem;
            padding-left: 0.5rem;
        }
        details > summary {
            cursor: pointer;
            list-style: none;
            padding: 2px 5px;
            border-radius: 4px;
            transition: background 0.2s;
        }
        details > summary:hover {
            background-color: #f3f4f6;
        }
        details > summary::-webkit-details-marker {
            display: none;
        }
        .tag-name { color: #be185d; font-weight: bold; }
        .attr-name { color: #7c3aed; }
        .attr-value { color: #059669; }
        .text-content { color: #374151; }
        .comment { color: #9ca3af; font-style: italic; }
    </style>
</head>
<body class="bg-gray-50 min-h-screen font-sans text-gray-900">

    <div class="max-w-5xl mx-auto p-4 md:p-8">
        <header class="mb-8 text-center">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">HTML Formatter & Counter</h1>
            <p class="text-gray-600">HTMLファイルをアップロードして、整形・文字数カウント・階層表示を行います。</p>
        </header>

        <!-- Stats & Controls -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200">
                <p class="text-sm text-gray-500 mb-1">総文字数 (スペース込)</p>
                <p id="charCount" class="text-2xl font-mono font-bold text-blue-600">0</p>
            </div>
            <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200">
                <p class="text-sm text-gray-500 mb-1">ファイルサイズ</p>
                <p id="fileSize" class="text-2xl font-mono font-bold text-green-600">0 KB</p>
            </div>
            <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200 flex flex-col justify-center">
                <input type="file" id="fileInput" accept=".html,.txt" class="hidden">
                <button onclick="document.getElementById('fileInput').click()" class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors w-full">
                    ファイルを選択
                </button>
            </div>
        </div>

        <!-- View Controls -->
        <div id="controls" class="hidden mb-4 flex gap-2">
            <button onclick="toggleAll(true)" class="text-sm bg-gray-200 hover:bg-gray-300 px-3 py-1 rounded">すべて展開</button>
            <button onclick="toggleAll(false)" class="text-sm bg-gray-200 hover:bg-gray-300 px-3 py-1 rounded">すべて折りたたむ</button>
        </div>

        <!-- Main Content -->
        <div id="outputContainer" class="bg-white rounded-xl shadow-inner border border-gray-200 p-6 overflow-x-auto min-h-[400px]">
            <div id="placeholder" class="text-center py-20 text-gray-400">
                <svg class="w-16 h-16 mx-auto mb-4 opacity-20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                ファイルをアップロードしてください
            </div>
            <div id="treeOutput" class="font-mono text-sm leading-relaxed"></div>
        </div>
    </div>

    <script>
        const fileInput = document.getElementById('fileInput');
        const treeOutput = document.getElementById('treeOutput');
        const placeholder = document.getElementById('placeholder');
        const charCountEl = document.getElementById('charCount');
        const fileSizeEl = document.getElementById('fileSize');
        const controls = document.getElementById('controls');

        fileInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;

            // Stats update
            fileSizeEl.textContent = (file.size / 1024).toFixed(2) + ' KB';
            
            const reader = new FileReader();
            reader.onload = function(event) {
                const content = event.target.result;
                charCountEl.textContent = content.length.toLocaleString();
                renderHTMLTree(content);
                placeholder.classList.add('hidden');
                controls.classList.remove('hidden');
            };
            reader.readAsText(file);
        });

        function renderHTMLTree(htmlString) {
            treeOutput.innerHTML = '';
            const parser = new DOMParser();
            const doc = parser.parseFromString(htmlString, 'text/html');
            
            // Build tree from the body or the whole doc
            const root = doc.documentElement;
            const tree = createNodeElement(root);
            treeOutput.appendChild(tree);
        }

        function createNodeElement(node) {
            if (node.nodeType === Node.TEXT_NODE) {
                const text = node.textContent.trim();
                if (!text) return null;
                const span = document.createElement('div');
                span.className = 'text-content ml-4 my-1';
                span.textContent = text;
                return span;
            }

            if (node.nodeType === Node.COMMENT_NODE) {
                const div = document.createElement('div');
                div.className = 'comment ml-4 my-1';
                div.textContent = `<!-- ${node.textContent} -->`;
                return div;
            }

            if (node.nodeType === Node.ELEMENT_NODE) {
                const details = document.createElement('details');
                const summary = document.createElement('summary');
                
                // Construct tag preview
                const tagSpan = document.createElement('span');
                tagSpan.className = 'tag-name';
                tagSpan.textContent = `<${node.tagName.toLowerCase()}`;
                
                summary.appendChild(tagSpan);

                // Add attributes
                Array.from(node.attributes).forEach(attr => {
                    const attrSpan = document.createElement('span');
                    attrSpan.innerHTML = ` <span class="attr-name">${attr.name}</span>="<span class="attr-value">${attr.value}</span>"`;
                    summary.appendChild(attrSpan);
                });

                const closeSpan = document.createElement('span');
                closeSpan.className = 'tag-name';
                closeSpan.textContent = '>';
                summary.appendChild(closeSpan);

                details.appendChild(summary);

                const contentDiv = document.createElement('div');
                contentDiv.className = 'collapsible-content';

                let hasChildren = false;
                node.childNodes.forEach(child => {
                    const childElement = createNodeElement(child);
                    if (childElement) {
                        contentDiv.appendChild(childElement);
                        hasChildren = true;
                    }
                });

                if (hasChildren) {
                    details.appendChild(contentDiv);
                    // Closing tag visual
                    const endTag = document.createElement('div');
                    endTag.className = 'tag-name text-xs opacity-50 ml-4';
                    endTag.textContent = `</${node.tagName.toLowerCase()}>`;
                    details.appendChild(endTag);
                } else {
                    // If no children, don't show as expandable if possible
                    summary.innerHTML += `<span class="tag-name"> /</span>`;
                }

                return details;
            }

            return null;
        }

        function toggleAll(open) {
            const allDetails = treeOutput.querySelectorAll('details');
            allDetails.forEach(d => d.open = open);
        }
    </script>
</body>
</html>